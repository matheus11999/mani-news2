{
  "name": "Mani News",
  "description": "Sistema completo de not√≠cias com painel administrativo",
  "repository": "https://github.com/matheus11999/mani-news2",
  "logo": "https://images.unsplash.com/photo-1504711434969-e33886168f5c?ixlib=rb-4.0.3&auto=format&fit=crop&w=200&h=200",
  "keywords": ["nodejs", "react", "news", "cms", "postgresql"],
  "image": "heroku/nodejs",
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    }
  ],
  "formation": {
    "web": {
      "quantity": 1,
      "size": "basic"
    }
  },
  "addons": [
    "heroku-postgresql:essential-0"
  ],
  "env": {
    "NODE_ENV": {
      "description": "Environment (production/development)",
      "value": "production"
    },
    "JWT_SECRET": {
      "description": "Secret key for JWT tokens",
      "generator": "secret"
    },
    "DATABASE_URL": {
      "description": "PostgreSQL database URL (automatically set by Heroku PostgreSQL addon)"
    }
  },
  "scripts": {
    "postdeploy": "npm run db:push && npm run db:init"
  },
  "stack": "heroku-24"
}